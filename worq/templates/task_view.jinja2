  <script>
    document.addEventListener('DOMContentLoaded', function() {
      document.getElementById('errorMessage').textContent = {{ msg|tojson }};
      new bootstrap.Modal(document.getElementById('errorModal')).show();
    });
  </script>
  
{% endfor %}
<script>
function loadTaskFiles(taskId) {
    fetch(`/files_by_task?task_id=${taskId}`)
        .then(response => response.json())
        .then(data => {
            const filesList = document.getElementById('task-files-list');
            filesList.innerHTML = '';

            if (data.status === 'ok' && data.files.length > 0) {
                data.files.forEach(file => {
                    const fileItem = document.createElement('div');
                    fileItem.classList.add('mb-2');

                    fileItem.innerHTML = `
                        <a href="/file_preview/${file.id}" target="_blank">${file.filename}</a>
                        <button class="btn btn-danger btn-sm" onclick="openDeleteModal(${file.id}, '${taskId}')">🗑️</button>

                    `;

                    filesList.appendChild(fileItem);
                });
            } else {
                filesList.innerHTML = '<p>No files uploaded for this task.</p>';
            }
        });
}
</script>
<script>
function openDeleteModal(fileId, taskId) {
    fileToDeleteId = fileId;
    taskIdOfFile = taskId;
    const modal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
    modal.show();
}
</script>

{% endblock tasks %}
