{% extends "workq_main.jinja2" %}

{% block content %}
<div id="edit-user-popup" class="popup-container active">
  <div class="popup-box">
    <div class="iconperson">
      <span class="material-symbols-outlined">person</span>
    </div>

    <h5>Edit User</h5>

    <form id="edit-user-form" method="POST" action="{{ request.route_url('update_user') }}">
      <input type="hidden" id="user_id" name="user_id">

      <div class="search-bar2">
        <input type="text" id="form-search-input" placeholder="Search..." oninput="handleFormSearchInput(event)">
        <div id="form-autocomplete-results" class="autocomplete-results"></div>
      </div>

      <input class="controls" type="text" id="name" name="name" placeholder="Name">
      <input class="controls" type="email" id="email" name="email" placeholder="Email Address">
      <input class="controls" type="text" id="tel" name="tel" placeholder="Phone Number">

      <select class="controls" id="country" name="country_id">
        <option value="" disabled selected>Select a Country</option>
        {% for country in countries %}
          <option value="{{ country.id }}">{{ country.name }}</option>
        {% endfor %}
      </select>

      <select class="controls" id="area" name="area_id">
        <option value="" disabled selected>Select an Area</option>
        {% for area in areas %}
          <option value="{{ area.id }}">{{ area.area }}</option>
        {% endfor %}
      </select>

      <select class="controls" id="role" name="role_id">
        <option value="" disabled selected>Select a Role</option>
        {% for role in roles %}
          <option value="{{ role.id }}">{{ role.name }}</option>
        {% endfor %}
      </select>

      <input class="close-btn" type="submit" value="Save Changes">
    </form>
  </div>
</div>

<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title" id="successModalLabel">User Updated</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        The user has been updated successfully!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success" data-bs-dismiss="modal">OK</button>
      </div>
    </div>
  </div>
</div>

<!-- Error Modal -->
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="errorModalLabel">Error</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="errorMessage">
        An error occurred while updating the user.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript -->
<script>
const countries = {{ countries | tojson }};
const users = {{ users | tojson }};

document.addEventListener('DOMContentLoaded', function () {
  const form = document.getElementById('edit-user-form');
  const popup = document.getElementById('edit-user-popup');

  if (popup) {
    popup.classList.add('active');
  }

  function resetFormFields() {
    if (form) {
      form.reset();
      document.getElementById('user_id').value = '';
      document.getElementById('form-search-input').value = '';
      document.getElementById('form-autocomplete-results').innerHTML = '';
    }
  }

  if (form) {
    form.addEventListener('submit', function (event) {
      event.preventDefault();
      const formData = new FormData(form);
      const jsonData = Object.fromEntries(formData.entries());

      fetch('{{ request.route_url("update_user") }}', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(jsonData)
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          const successModal = new bootstrap.Modal(document.getElementById('successModal'));
          successModal.show();
        } else {
          document.getElementById('errorMessage').innerText = data.error || 'Unknown error';
          const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
          errorModal.show();
        }
      })
      .catch(error => {
        console.error('Error:', error);
        document.getElementById('errorMessage').innerText = 'Request failed!';
        const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
        errorModal.show();
      });
    });
  }

  // Close popup when clicking outside or on the close button
  document.querySelectorAll('#edit-user-popup, .close-btn').forEach((element) => {
    element.addEventListener('click', (e) => {
      if (e.target.id === 'edit-user-popup' || e.target.classList.contains('close-btn')) {
        popup.classList.remove('active');
        const backdrop = document.querySelector('.modal-backdrop');
        if (backdrop) backdrop.remove();
      }
    });
  });
});
</script>

<script src="{{ request.static_url('worq:static/assets/functions.js') }}"></script>
{% endblock content %}
